<lsf>
    <initials>
        <reference length="2" />
        <!-- axis length; "0" means no axis displayed -->
        <root id="root" />
        <!-- identifier of root node of the scene graph; this node -->
        <!-- must be defined in one of the following NODE declarations -->
    </initials>
    <views default="defaultCamera">
        <!-- at least one of the following type of cameras must be declared -->
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <ortho id="demoOrtho" near="0.2" far="100" left="-0.2" right="0.2" top="0.2" bottom="-0.2">
            <from x="5" y="0" z="10" />
            <to x="5" y="0" z="0" />
            <up x="0" y="1" z="0" /><!-- optional, default 0,1,0 -->
        </ortho>
    </views>

    <illumination>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />           <!-- global ambient -->
        <background r="0.1" g="0.7" b="1.0" a="1.0" />        <!-- background color -->
    </illumination>


    <lights>
        <!-- NOTE: this block "light" must be repeated as necessary with different "id". At least one light should be present, and a maximum of eight lights is accepted. -->
        <light id="light1">            <!-- light identifier -->
            <enable value="1" />
            <!-- enable/disable -->
            <position x="10" y="12" z="9.5" w="1.0" /><!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />                   <!-- ambient component -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />             <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            <!-- specular component -->
        </light>
    </lights>


    <textures>
        <!-- NOTE: this block "TEXTURE" must be repeated as necessary with different "id" -->
        <texture id="cauldronTexture" path="./scenes/images/cauldron.jpg" />
        <texture id="crystal_ballTexture" path="./scenes/images/crystal_ball.jpg" />
        <texture id="default_textureTexture" path="./scenes/images/default_texture.jpg" />
        <texture id="tableTexture" path="./scenes/images/table.jpg" />
        <texture id="vial_1Texture" path="./scenes/images/vial_1.jpg" />
        <texture id="vial_2Texture" path="./scenes/images/vial_2.jpg" />
        <texture id="vial_3Texture" path="./scenes/images/vial_3.jpg" />
    </textures>


    <materials>
        <!-- NOTE: the "MATERIAL" block may be repeated as required. Each defined material
         requires a distinct "id". At least one material should be present. -->
        <material id="demoMaterial">
            <shininess value="ff" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <nodes>
        <node id="root">            <!-- defines one intermediate node; may be repeated as necessary -->
            <!-- next two lines are mandatory -->
            <material id="null" /><!-- this superimposes the material received from parent node id="null" maintains material from parent node -->


            <texture id="default_textureTexture"><!-- declared texture superimposes the texture received from parent node id="null" maintains texture from parent node id="clear" clears texture declaration received from parent node -->
                <amplification afs="2.0" aft="2.0" /><!-- for primitives = dx/afs, dy/aft -->
            </texture>

            <!-- geom. transf. are optional and may be repeated, in any order, as necessary: -->
            <!--transformations>
                <translation x="0" y="1.0" z="1.0" />
                <rotation axis="yy" angle="45" />
                <scale sx="2" sy="1" sz="1" />
            </transformations> -->

            <transformations>
            </transformations>

            <!-- declaring descendants, at least one node or one leaf must be present
             descendants may be mixed, nodes and leafs -->
            <descendants>
                <noderef id="table" />
                <noderef id="cauldron" />
                <noderef id="vials" />
                <noderef id="crystal_ball" />
                <!-- "ss" is the identifier of a node or of leaf; -->
                <!-- may be repeated as necessary. It can refer an -->
                <!-- identifier of another node, before or later defined in the file. -->
                <!-- next lines define nodes of type leaf; may be repeated, in any order, as necessary -->
                <!-- leaf type="rectangle" x1="0" y1="1" x2="1" y2="0" /> -->
                <!-- 2D coordinates on the XY plane for left-top and right-bottom vertices. -->
            </descendants>

        </node>

        <node id="table">            <!-- defines one intermediate node; may be repeated as necessary -->
            <!-- next two lines are mandatory -->
            <material id="null" /><!-- this superimposes the material received from parent node id="null" maintains material from parent node -->

            <texture id="tableTexture"><!-- declared texture superimposes the texture received from parent node id="null" maintains texture from parent node id="clear" clears texture declaration received from parent node -->
                <amplification afs="2.0" aft="2.0" /><!-- for primitives = dx/afs, dy/aft -->
            </texture>

            <!-- geom. transf. are optional and may be repeated, in any order, as necessary: -->
            <transformations>
                <translation x="5" y="5" z="0" /> <!-- TODO: a fazer mais tarde -->
            </transformations>

            <!-- declaring descendants, at least one node or one leaf must be present
             descendants may be mixed, nodes and leafs -->
            <descendants>
                <noderef id="pernas" />
                <noderef id="vigas_curtas" />
                <noderef id="tampos" />
                <noderef id="vigas_compridas" />
            </descendants>
        </node>

        <node id="pernas">
        
            <material id = "null" />

            <texture id="null">
            </texture>

            <descendants>
                <noderef id="perna1" />
                <noderef id="perna2" />
                <noderef id="perna3" />
                <noderef id="perna4" />
            </descendants>

        </node>

        <node id="perna1">
        
            <material id = "null" />

            <texture id="null">
            </texture>

            <transformations>
                <translation x="2.5" y="5" z="0" />
            </transformations>

            <descendants>
                <noderef id="paralelipipedo" />
            </descendants>
        
        </node>

        <node id="perna2">
        
            <material id = "null" />

            <texture id="null">
            </texture>

            <transformations>
                <translation x="2.5" y="-5" z="0" />
            </transformations>

            <descendants>
                <noderef id="paralelipipedo" />
            </descendants>
        
        </node>

        <node id="perna3">
        
            <material id = "null" />

            <texture id="null">
            </texture>

            <transformations>
                <translation x="-2.5" y="-5" z="0" />
            </transformations>

            <descendants>
                <noderef id="paralelipipedo" />
            </descendants>
        
        </node>

        <node id="perna4">
        
            <material id = "null" />

            <texture id="null">
            </texture>

            <transformations>
                <translation x="-2.5" y="5" z="0" />
            </transformations>

            <descendants>
                <noderef id="paralelipipedo" />
            </descendants>
        
        </node>

        <node id="paralelipipedo">
        
            <material id = "null" />

            <texture id="null">
            </texture>

            <descendants>
                <!-- Quadrados do topo/baixo -->

                <noderef id="quadrado_topo" />
                <noderef id="quadrado_baixo" />
                <noderef id="retangulo_lado1" />
                <noderef id="retangulo_lado2" />
                <noderef id="retangulo_lado3" />
                <noderef id="retangulo_lado4" />
                
            </descendants>
        
        </node>


        <node id="quadrado_baixo">
        
            <material id = "null" />

            <texture id="null">
            </texture>

            <descendants>
                <leaf type="rectangle" x1="-0.25" y1="-0.25" x2="0.25" y2="0.25" />
            </descendants>
        
        </node>

        <node id="quadrado_topo">
        
            <material id = "null" />

            <texture id="null">
            </texture>

            <transformations>
                <translation x="0" y="0" z="4" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-0.25" y1="-0.25" x2="0.25" y2="0.25" />
            </descendants>
        
        </node>

        
        <node id="retangulo_lado1">
        
            <material id = "null" />

            <texture id="null">
            </texture>

            <transformations>
                <translation x="0" y="0.25" z="0" />
                <rotation axis="xx" angle="-45" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0" y1="-4" x2="0.5" y2="0" />
            </descendants>
        
        </node>

        <node id="retangulo_lado2">
        
            <material id = "null" />

            <texture id="null">
            </texture>

            <transformations>
                <translation x="0" y="-0.25" z="0" />
                <rotation axis="xx" angle="-45" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0" y1="-4" x2="0.5" y2="0" />
            </descendants>
        
        </node>

        <node id="retangulo_lado3">
        
            <material id = "null" />

            <texture id="null">
            </texture>

            <transformations>
                <translation x="0.25" y="0" z="0" />
                <rotation axis="yy" angle="45" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0" y1="0" x2="-4" y2="0.5" />
            </descendants>
        
        </node>

        <node id="retangulo_lado4">
        
            <material id = "null" />

            <texture id="null">
            </texture>

            <transformations>
                <translation x="-0.25" y="0" z="0" />
                <rotation axis="yy" angle="45" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0" y1="0" x2="-4" y2="0.5" />
            </descendants>
        
        </node>

        <node id="vigas_compridas">
        
            <material id = "null" />

            <texture id="null">
            </texture>

            <descendants>
                <noderef id="viga_comprida1" />
                <noderef id="viga_comprida2" />
            </descendants>

        </node>

        <node id="vigas_curtas">
        
            <material id = "null" />

            <texture id="null">
            </texture>

            <descendants>
                <noderef id="viga_curta1" />
                <noderef id="viga_curta2" />
            </descendants>

        </node>

        <node id="viga_curta1">
        
            <material id = "null" />

            <transformations>
                <translation x="2.25" y="-5" z="3.75" />
                <rotation axis="yy" angle="-45" />
                <translation x="0.25" y="0" z="0" />
                <scale sx="1" sy="1" sz="1.125"/>            
        
            </transformations>

            <texture id="null">
            </texture>

            <descendants>
                <noderef id="paralelipipedo" />
            </descendants>

        </node>

        <node id="viga_curta2">
        
            <material id = "null" />

            <transformations>
                <translation x="2.25" y="5" z="3.75" />
                <rotation axis="yy" angle="-45" />
                <translation x="0.25" y="0" z="0" />
                <scale sx="1" sy="1" sz="1.125"/>            
        
            </transformations>

            <texture id="null">
            </texture>

            <descendants>
                <noderef id="paralelipipedo" />
            </descendants>

        </node>

        <node id="viga_comprida1">
        
            <material id = "null" />

            <transformations>
                <translation x="-2.5" y="-4.75" z="3.75" />
                <rotation axis="xx" angle="-45" />
                <translation x="0" y="-0.25" z="0" />
                <scale sx="1" sy="1" sz="2.375"/>            
        
            </transformations>

            <texture id="null">
            </texture>

            <descendants>
                <noderef id="paralelipipedo" />
            </descendants>

        </node>

        <node id="viga_comprida2">
        
            <material id = "null" />

            <transformations>
                <translation x="2.5" y="-4.75" z="3.75" />
                <rotation axis="xx" angle="-45" />
                <translation x="0" y="-0.25" z="0" />
                <scale sx="1" sy="1" sz="2.375"/>            
        
            </transformations>

            <texture id="null">
            </texture>

            <descendants>
                <noderef id="paralelipipedo" />
            </descendants>

        </node>

    </nodes>
</lsf>
