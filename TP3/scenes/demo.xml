    </lights>


    <textures>
        <texture id="wallTexture" path="./scenes/images/wallTexture.jpg" />
        <texture id="floorTexture" path="./scenes/images/floorTexture.jpg" />
        <texture id="stoolTexture" path="./scenes/images/stoolTexture.jpg" />
