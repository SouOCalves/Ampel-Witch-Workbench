 <lsf>
    <initials>
        <reference length="2" />
        <!-- axis length; "0" means no axis displayed -->
        <root id="root" />
        <!-- identifier of root node of the scene graph; this node -->
        <!-- must be defined in one of the following NODE declarations -->
    </initials>
    <views default="defaultCamera">
        <!-- at least one of the following type of cameras must be declared -->
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="15" y="20" z="0" />
            <to x="0" y="10" z="0" />
        </perspective>
    </views>

    <illumination>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />           <!-- global ambient -->
        <background r="0" g="0" b="0" a="1.0" />        <!-- background color -->
    </illumination>


    <lights>
        <light id="light1">
            <enable value="1" />
            <position x="0" y="20" z="0" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />  
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" /> 
        </light>

        <light id="crystal_ball_light">
            <enable value="1" />
            <position x="0" y="15" z="8" w="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="1" g="1" b="1" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </light>
        <light id="crystal_ball_light1">
            <enable value="1" />
            <position x="0" y="-5" z="8" w="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="1" g="1" b="1" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </light>
        <light id="crystal_ball_light2">
            <enable value="1" />
            <position x="0" y="7" z="8" w="1.0" />
