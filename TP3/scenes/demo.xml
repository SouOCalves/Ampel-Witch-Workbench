            <diffuse r="1" g="1" b="1" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </light>
        <light id="crystal_ball_light3">
            <enable value="1" />
            <position x="10" y="7" z="8" w="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="1" g="1" b="1" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </light>
        <light id="crystal_ball_light4">
            <enable value="1" />
            <position x="-10" y="7" z="8" w="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="1" g="1" b="1" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </light>


        <light id="light2">
            <enable value="1" />
            <position x="-10" y="0" z="0" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />  
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" /> 
        </light>


    </lights>


    <textures>

    </textures>


    <materials>
        <!-- NOTE: the "MATERIAL" block may be repeated as required. Each defined material
         requires a distinct "id". At least one material should be present. -->
        <material id="demoMaterial">
            <shininess value="2.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" /> 
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

    </materials>

    <animations>
    </animations>

    <spritesheets>
        <spritesheet id = "spritesheetId" path = "./scenes/images/smoke.jpg" sizeM = "4" sizeN = "6" />
    </spritesheets>

